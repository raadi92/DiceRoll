<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="hboxContainer"
      maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      spacing="10.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.local.diceroll.controller.DicepoolController">
    <children>
        <TextField fx:id="txtDicePool" prefHeight="40.0" prefWidth="250.0">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </TextField>
        <Button fx:id="btnThrow" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" text="Throw">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
        <Label fx:id="lblResult" prefHeight="40.0" prefWidth="300.0" text="Label">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </Label>
        <Button fx:id="btnClose" onAction="#onCloseButtonClick" mnemonicParsing="false" prefHeight="40.0" prefWidth="30.0" text="-">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</HBox>
